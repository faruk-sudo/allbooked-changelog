{
  "$schema": "https://example.com/schemas/design-tokens.schema.json",
  "meta": {
    "name": "changelog-app-design-tokens",
    "version": "1.0.0",
    "description": "Token source of truth for primitives and semantic aliases."
  },
  "primitive": {
    "color": {
      "gray": {
        "0": "#ffffff",
        "25": "#f8fafc",
        "50": "#f1f5f9",
        "100": "#e2e8f0",
        "200": "#cbd5e1",
        "300": "#94a3b8",
        "500": "#475569",
        "700": "#1e293b",
        "900": "#0f172a"
      },
      "blue": {
        "100": "#dbeafe",
        "500": "#2563eb",
        "600": "#1d4ed8",
        "700": "#1e40af"
      },
      "green": {
        "100": "#dcfce7",
        "500": "#16a34a",
        "700": "#15803d"
      },
      "red": {
        "100": "#fee2e2",
        "500": "#dc2626",
        "700": "#b91c1c"
      },
      "amber": {
        "100": "#fef3c7",
        "500": "#d97706",
        "700": "#b45309"
      }
    },
    "typography": {
      "fontFamily": {
        "sans": "-apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
        "mono": "ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace"
      },
      "fontSize": {
        "xs": "0.75rem",
        "sm": "0.875rem",
        "md": "1rem",
        "lg": "1.125rem",
        "xl": "1.25rem",
        "2xl": "1.5rem"
      },
      "fontWeight": {
        "regular": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700
      },
      "lineHeight": {
        "tight": 1.2,
        "normal": 1.5,
        "relaxed": 1.65
      }
    },
    "spacing": {
      "0": "0",
      "1": "0.25rem",
      "2": "0.5rem",
      "3": "0.75rem",
      "4": "1rem",
      "5": "1.25rem",
      "6": "1.5rem",
      "8": "2rem",
      "10": "2.5rem",
      "12": "3rem",
      "16": "4rem"
    },
    "radius": {
      "none": "0",
      "sm": "0.25rem",
      "md": "0.5rem",
      "lg": "0.75rem",
      "xl": "1rem",
      "pill": "9999px"
    },
    "shadow": {
      "xs": "0 1px 2px rgba(15, 23, 42, 0.08)",
      "sm": "0 1px 3px rgba(15, 23, 42, 0.12)",
      "md": "0 8px 20px rgba(15, 23, 42, 0.12)"
    },
    "zIndex": {
      "base": 0,
      "dropdown": 1000,
      "sticky": 1100,
      "overlay": 1200,
      "modal": 1300
    }
  },
  "semantic": {
    "light": {
      "bg": {
        "canvas": "{primitive.color.gray.0}",
        "subtle": "{primitive.color.gray.25}"
      },
      "surface": {
        "base": "{primitive.color.gray.0}",
        "raised": "{primitive.color.gray.25}",
        "sunken": "{primitive.color.gray.50}"
      },
      "text": {
        "primary": "{primitive.color.gray.900}",
        "muted": "{primitive.color.gray.500}",
        "inverse": "{primitive.color.gray.0}"
      },
      "border": {
        "default": "{primitive.color.gray.200}",
        "strong": "{primitive.color.gray.300}",
        "subtle": "{primitive.color.gray.100}"
      },
      "primary": {
        "bg": "{primitive.color.blue.600}",
        "fg": "{primitive.color.gray.0}",
        "border": "{primitive.color.blue.600}",
        "hover": "{primitive.color.blue.700}"
      },
      "secondary": {
        "bg": "{primitive.color.gray.0}",
        "fg": "{primitive.color.gray.900}",
        "border": "{primitive.color.gray.300}",
        "hover": "{primitive.color.gray.50}"
      },
      "danger": {
        "bg": "{primitive.color.red.500}",
        "fg": "{primitive.color.gray.0}",
        "border": "{primitive.color.red.500}",
        "hover": "{primitive.color.red.700}"
      },
      "success": {
        "bg": "{primitive.color.green.500}",
        "fg": "{primitive.color.gray.0}",
        "border": "{primitive.color.green.500}",
        "hover": "{primitive.color.green.700}"
      },
      "warning": {
        "bg": "{primitive.color.amber.500}",
        "fg": "{primitive.color.gray.900}",
        "border": "{primitive.color.amber.500}",
        "hover": "{primitive.color.amber.700}"
      },
      "focus": {
        "ring": "{primitive.color.blue.500}",
        "offset": "{primitive.color.gray.0}"
      },
      "disabled": {
        "bg": "{primitive.color.gray.100}",
        "fg": "{primitive.color.gray.500}",
        "border": "{primitive.color.gray.200}"
      }
    },
    "dark": {
      "bg": {
        "canvas": "{primitive.color.gray.900}",
        "subtle": "{primitive.color.gray.700}"
      },
      "surface": {
        "base": "{primitive.color.gray.700}",
        "raised": "{primitive.color.gray.500}",
        "sunken": "{primitive.color.gray.900}"
      },
      "text": {
        "primary": "{primitive.color.gray.0}",
        "muted": "{primitive.color.gray.200}",
        "inverse": "{primitive.color.gray.900}"
      },
      "border": {
        "default": "{primitive.color.gray.500}",
        "strong": "{primitive.color.gray.300}",
        "subtle": "{primitive.color.gray.700}"
      },
      "primary": {
        "bg": "{primitive.color.blue.500}",
        "fg": "{primitive.color.gray.0}",
        "border": "{primitive.color.blue.500}",
        "hover": "{primitive.color.blue.600}"
      },
      "secondary": {
        "bg": "{primitive.color.gray.700}",
        "fg": "{primitive.color.gray.0}",
        "border": "{primitive.color.gray.300}",
        "hover": "{primitive.color.gray.500}"
      },
      "danger": {
        "bg": "{primitive.color.red.500}",
        "fg": "{primitive.color.gray.0}",
        "border": "{primitive.color.red.500}",
        "hover": "{primitive.color.red.700}"
      },
      "success": {
        "bg": "{primitive.color.green.500}",
        "fg": "{primitive.color.gray.0}",
        "border": "{primitive.color.green.500}",
        "hover": "{primitive.color.green.700}"
      },
      "warning": {
        "bg": "{primitive.color.amber.500}",
        "fg": "{primitive.color.gray.900}",
        "border": "{primitive.color.amber.500}",
        "hover": "{primitive.color.amber.700}"
      },
      "focus": {
        "ring": "{primitive.color.blue.100}",
        "offset": "{primitive.color.gray.900}"
      },
      "disabled": {
        "bg": "{primitive.color.gray.700}",
        "fg": "{primitive.color.gray.300}",
        "border": "{primitive.color.gray.500}"
      }
    }
  }
}
